                    <TextView android:textSize="@dimen/bmi_result_analyse_value" android:layout_gravity="end|center" android:id="@id/suggest_weight_value" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/MoreAnalysisValue" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</miuix.springback.view.SpringBackLayout>
