            <TextView android:textSize="@dimen/bmi_result_text_size" android:id="@id/result" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/bmi_result_margin_top" style="@style/MoreAnalysisLabel" />
