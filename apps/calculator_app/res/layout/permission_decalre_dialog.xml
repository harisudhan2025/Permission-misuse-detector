<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/permission_dialog_padding" android:paddingEnd="@dimen/permission_dialog_padding">
        <TextView android:layout_gravity="center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/cta_desc" style="@style/permission_dialog_text_view_style" />
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/permission_item_margin_top" android:layout_marginBottom="@dimen/permission_item_margin_bottom">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/permission_option_miui12" style="@style/permission_option_text_view_style" />
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/permission_option_desc_miui12" style="@style/permission_option_desc_text_view_style" />
            <RelativeLayout android:layout_gravity="center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/permission_detail_margin_top">
                <ImageView android:id="@id/image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/permission_dialog_image_margin" />
                <TextView android:textSize="@dimen/permission_text_size" android:textColor="@color/permission_color" android:id="@id/permission" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="mipro-demibold" android:layout_toEndOf="@id/image" />
                <TextView android:textSize="@dimen/permission_desc_text_size" android:textColor="@color/permission_desc_color" android:id="@id/permission_purpose" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/permission" android:layout_toEndOf="@id/image" />
            </RelativeLayout>
        </LinearLayout>
        <TextView android:layout_gravity="center_horizontal" android:id="@id/remove_desc" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/permission_remove_desc_miui12" style="@style/permission_bottom_text_view_style" />
        <TextView android:layout_gravity="center_horizontal" android:id="@id/privacy_link" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/permission_privacy_link" style="@style/permission_bottom_text_view_style" />
    </LinearLayout>
</ScrollView>
